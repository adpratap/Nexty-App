<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".PhoneNo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/plogo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:transitionName="aaa"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/ptextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="NEXTY"
            android:textColor="#FFFFFF"
            android:transitionName="sst"
            android:textSize="50dp"
            android:textStyle="bold" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp">


            <TextView
                android:id="@+id/textViewe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:gravity="center"
                android:textColor="#D6274A"
                android:textSize="35dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewe"
                android:layout_width="250dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                />





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ipname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


                <EditText
                    android:id="@+id/Naamee"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="NAME"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:autofillHints="+91"
                    android:textStyle="bold"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/custom_name_icon"
                    android:maxLength="20"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:visibility="visible" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ipphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="PHONE"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/custom_phone_icon"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/ipotp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/otptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableStart="@drawable/custom_key_icon"
                    android:hint="OTP"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/otpsendbtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundbtn"
                android:textSize="22dp"
                android:text="NEXT" />

            <ProgressBar
                android:id="@+id/progressBarPhone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="40dp"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>