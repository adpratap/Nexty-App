<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keypair"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <ImageView
            android:id="@+id/kpplogo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:transitionName="aaa"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/kptextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="NEXTY"
            android:textColor="#FFFFFF"
            android:transitionName="sst"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/keypageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Secret Key"
                android:gravity="center"
                android:textColor="#D6274A"
                android:textSize="35dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/kpviewe"
                android:layout_width="250dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/keynum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableStart="@drawable/custom_key_icon"
                    android:hint="SECRET KEY"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:maxLength="13"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/keybtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundbtn"
                android:textSize="22dp"
                android:text="GO" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>